<?xml version="1.0"?>

<PropertyList>
    <nasal>
        <script>
            <![CDATA[
            var dir = getprop("/sim/fg-home");
            io.load_nasal(dir ~ '/Input/Joysticks/overlay/TCA-Q-Eng12/A320.nas', 'TA320_A320');
        ]]>
        </script>
    </nasal>
    
    <axis n="0">
        <desc type="string">Throttle Engine 1</desc>
        <binding>
            <condition>
                <not>
                    <property>/controls/engines/engine[0]/reverser</property>
                </not>
            </condition>
            <command type="string">nasal</command>
            <script>
                var v = cmdarg().getValue('setting');
                TA320_A320.setThrust(0, v);
            </script>
        </binding>
        <binding>
            <condition>
                <property>/controls/engines/engine[0]/reverser</property>
            </condition>
            <command type="string">nasal</command>
            <script>
                var v = cmdarg().getValue('setting');
                TA320_A320.setThrust(0, v);
            </script>
        </binding>
    </axis> 

    <axis n="1">
        <desc type="string">Throttle Engine 2</desc>
        <binding>
            <condition>
                <not>
                    <property>/controls/engines/engine[1]/reverser</property>
                </not>
            </condition>
            <command type="string">nasal</command>
            <script>
                var v = cmdarg().getValue('setting');
                TA320_A320.setThrust(1, v);
            </script>
        </binding>
        <binding>
            <condition>
                <property>/controls/engines/engine[1]/reverser</property>
            </condition>
            <command type="string">nasal</command>
            <script>
                var v = cmdarg().getValue('setting');
                TA320_A320.setThrust(1, v);
            </script>
        </binding>
    </axis>
    
    <axis n="2">
        <desc type="string">Flap Lever</desc>
        <binding>
            <command type="string">property-scale</command>
            <property type="string">/controls/flight/flaps</property>
            <factor type="double">0.5</factor>
            <offset type="double">1</offset>
            <power type="double">1</power>
        </binding>
    </axis>
    
    <axis n="5">
        <desc type="string">Speedbrake Lever</desc>
        <binding>
            <command type="string">property-scale</command>
            <property type="string">/controls/flight/speedbrake</property>
            <factor type="double">0.5</factor>
            <offset type="double">1</offset>
            <power type="double">1</power>
        </binding>
    </axis>
    
    <button n="0">
        <desc>A/T disconnect</desc>
        <binding>
            <command>nasal</command>
            <script>
                fcu.FCUController.ATDisc();
            </script>
        </binding>
    </button>
    
    <button n="2">
        <desc>Cutoff Switch Left</desc>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">/controls/engines/engine[0]/cutoff-switch</property>
            <value type="bool">false</value>
        </binding>
        
        <mod-up>
            <binding>
                <command type="string">property-assign</command>
                <property type="string">/controls/engines/engine[0]/cutoff-switch</property>
                <value type="bool">true</value>
            </binding>
        </mod-up>
    </button>
    <button n="3">
        <desc>Cutoff Switch Right</desc>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">/controls/engines/engine[1]/cutoff-switch</property>
            <value type="bool">false</value>
        </binding>
        
        <mod-up>
            <binding>
                <command type="string">property-assign</command>
                <property type="string">/controls/engines/engine[1]/cutoff-switch</property>
                <value type="bool">true</value>
            </binding>
        </mod-up>
    </button>
    
    <button n="4">
        <desc>Taxi Lights</desc>
        <binding>
            <command type="string">property-toggle</command>
            <property type="string">/controls/lighting/turnoff-light-switch</property>
        </binding>
        <binding>
            <command>nasal</command>
            <script>TA320_A320.synchronizeLights();</script>
        </binding>
    </button>
    <button n="5">
        <desc>Landing Lights</desc>
        <binding>
            <condition>
                <property>gear/gear[0]/wow</property>
            </condition>
            <command type="string">property-cycle</command>
            <property type="string">/controls/switches/landing-lights-l</property>
            <value>0.5</value>
            <value>1</value>
        </binding>
        <binding>
            <condition>
                <not>
                    <property>gear/gear[0]/wow</property>
                </not>
            </condition>
            <command type="string">property-cycle</command>
            <property type="string">/controls/switches/landing-lights-l</property>
            <value>0</value>
            <value>1</value>
        </binding>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">/controls/switches/landing-lights-r</property>
            <property type="string">/controls/switches/landing-lights-l</property>
        </binding>
        <binding>
            <command>nasal</command>
            <script>TA320_A320.synchronizeLights();</script>
        </binding>
    </button>
    
    <button n="6">
        <desc>Ignition Knob Left</desc>
        <binding>
            <command type="string">property-assign</command>
            <property>controls/ignition/start-sw</property>
            <value type="int">0</value>
        </binding>
        <mod-up>
            <binding>
                <command type="string">property-assign</command>
                <property>controls/ignition/start-sw</property>
                <value type="int">1</value>
            </binding>
        </mod-up>
    </button>

    <button n="7">
        <desc>Ignition Knob Right</desc>
        <binding>
            <command type="string">property-assign</command>
            <property>controls/ignition/start-sw</property>
            <value type="int">2</value>
        </binding>
        <mod-up>
            <binding>
                <command type="string">property-assign</command>
                <property>controls/ignition/start-sw</property>
                <value type="int">1</value>
            </binding>
        </mod-up>
    </button>

    <button n="16">
        <desc>RUD TRIM RESET PB</desc>
			<binding>
				<command>property-assign</command>
				<property>controls/cockpit/rudder-trim-reset-translate</property>
				<value>0.0015</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/flight/rudder-trim</property>
				<value>0</value>
			</binding>

			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/cockpit/rudder-trim-reset-translate</property>
					<value>0.0</value>
				</binding>
			</mod-up>
    </button>

    <button n="17">
      <desc type="string">Rudder Trim left</desc>
      <repeatable type="bool">true</repeatable>
         <binding>
             <command type="string">nasal</command>
             <script type="string">controls.rudderTrim(-1);</script>
         </binding>
         <binding>
            <command>property-assign</command>
            <property>controls/switches/rudder-trim</property>
            <value>-1</value>
         </binding>

        <mod-up>
         <binding>
            <command>property-assign</command>
            <property>controls/switches/rudder-trim</property>
            <value>0</value>
         </binding>
        </mod-up>
    </button>

    <button n="18">
      <desc type="string">Rudder Trim right</desc>
      <repeatable type="bool">true</repeatable>
         <binding>
             <command type="string">nasal</command>
             <script type="string">controls.rudderTrim(1);</script>
         </binding>
         <binding>
            <command>property-assign</command>
            <property>controls/switches/rudder-trim</property>
            <value>1</value>
         </binding>

        <mod-up>
         <binding>
            <command>property-assign</command>
            <property>controls/switches/rudder-trim</property>
            <value>0</value>
         </binding>
        </mod-up>
    </button>

    <button n="19">
        <desc>Parking Brake Handle</desc>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">/controls/gear/brake-parking</property>
            <value type="int">1</value>
        </binding>

        <mod-up>
            <binding>
                <command type="string">property-assign</command>
                <property type="string">/controls/gear/brake-parking</property>
                <value type="int">0</value>
            </binding>
      </mod-up>
    </button>

    <button n="20">
        <desc>Gear Lever</desc>
        <binding>
            <command type="string">property-assign</command>
            <property type="string">/controls/gear/lever-cockpit</property>
            <value type="int">1</value>
        </binding>

        <mod-up>
            <binding>
                <command type="string">property-assign</command>
                <property type="string">/controls/gear/lever-cockpit</property>
                <value type="int">3</value>
            </binding>
      </mod-up>
    </button>

</PropertyList>
